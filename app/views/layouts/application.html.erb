<!DOCTYPE html>
<html>
  <head>
    <title>MejoraTech</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
            <span><%= fa_icon 'bars' %></span>
          </button>
          <a class="navbar-brand" href="#">MejoraTech</a>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Complaints', complaints_path %></li>
            <% if employee_signed_in? && current_employee.admin %>
              <li><%= link_to 'Products', products_path %></li>
              <li><%= link_to 'Employees', employees_path %></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
          <% if employee_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                My account <span><%= fa_icon 'caret-down' %></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Change password', edit_password_employees_path %></li>
              </ul>
            </li>
            <li><%= link_to 'Logout', destroy_employee_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Login', new_employee_session_path %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% if notice.present? %>
        <div id="notice" class="alert alert-info fade in">
          <%= notice %>
          <a href="#" class="close" data-dismiss="alert" aria-label="close">
            <%= fa_icon 'times' %>
          </a>
        </div>
      <% end %>
      <% if alert.present? %>
        <div id="alert" class="alert alert-warning fade in">
          <%= alert %>
          <a href="#" class="close" data-dismiss="alert" aria-label="close">
            <%= fa_icon 'times' %>
          </a>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
