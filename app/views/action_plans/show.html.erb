<h1>Plan de acción <small>para: <%= @amef_component.fishbone_cause.cause %></small></h1>

<div class="row">
  <div class="col-md-4 col-xs-12">
    <h3>Plan de acción</h3>
    <div>
      <p><%= @action_plan.action_plan %></p>
    </div>
    <h3>¿Cómo?</h3>
    <div>
      <p><%= @action_plan.how %></p>
    </div>
  </div>
  <div class="col-md-4 col-xs-12">
    <h3>Fecha de evaluación</h3>
    <div>
      <p><%= @action_plan.evaluation_date %></p>
    </div>
    <h3>Evaluación</h3>
    <div>
      <p><%= @action_plan.evaluation %></p>
    </div>
  </div>
  <div class="col-md-4 col-xs-12">
    <h3>Empleado encargado</h3>
    <div>
      <%= link_to @action_plan.employee, employee_path(@action_plan.employee) %>
    </div>
    <h3>Costo</h3>
    <div>
      <p>$<%= @action_plan.cost %></p>
    </div>
  </div>
</div>
