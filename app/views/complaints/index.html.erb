<h1>Complaints</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Product</th>
      <th>Batch number</th>
      <th>Effective date</th>
      <th>Classification</th>
      <th>Description</th>
      <th>Source</th>
      <th>Pending</th>
      <th>Review date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @complaints.each do |complaint| %>
      <tr>
        <td><%= complaint.product_name %></td>
        <td><%= complaint.batch_number %></td>
        <td><%= complaint.effective_date %></td>
        <td><%= complaint.classification.humanize %></td>
        <td><%= complaint.description %></td>
        <td><%= complaint.source %></td>
        <td><%= complaint.pending ? 'Pending' : 'Closed' %></td>
        <td><%= complaint.review_date %></td>
        <td><%= link_to 'Show', complaint, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_complaint_path(complaint), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', complaint, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Complaint', new_complaint_path, class: 'btn btn-default' %>
