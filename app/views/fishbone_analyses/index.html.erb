<h1><%= t('.title', complaint: @complaint) %></h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= t('.effect') %></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @fishbone_analyses.each do |fishbone_analysis| %>
      <tr>
        <td><%= fishbone_analysis %></td>
        <td>
          <span class="pull-right">
            <%= link_to t('.show'), complaint_fishbone_analysis_path(@complaint, fishbone_analysis), class: 'btn btn-default' %>
            <%= link_to t('.destroy'), complaint_fishbone_analysis_path(@complaint, fishbone_analysis), method: :delete, data: { confirm: t(:confirmation_question) }, class: 'btn btn-default' %>
          </span>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>

<%= link_to t('.new_fishbone_analysis'), new_complaint_fishbone_analysis_path(@complaint), class: 'btn btn-default' %>
