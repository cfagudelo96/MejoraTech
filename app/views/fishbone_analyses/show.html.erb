<h1><%= @fishbone_analysis %></h1>

<%= content_tag :div, '', data: {json: @fishbone_analysis_json}, id: 'fishbone-analysis-container' %>

<div class="modal fade" id="cause-modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body" id="cause-modal-body">
      </div>
    </div>
  </div>
</div>

<div>
  <%= link_to t(:back), complaint_path(@complaint), class: 'btn btn-default' %>
  <span class="btn-group pull-right" role="group" aria-label="actions">
    <% unless @fishbone_analysis.amef_analysis %>
      <%= link_to t('.new_amef_analysis'), new_fishbone_analysis_amef_analysis_path(@fishbone_analysis), class: 'btn btn-default' %>
    <% end %>
    <%= link_to t('.delete'), complaint_fishbone_analysis_path(@complaint, @fishbone_analysis), method: :delete, data: { confirm: t(:confirmation_question) }, class: 'btn btn-default' %>
  </span>
</div>

<%= javascript_tag do %>
  drawFishboneDiagram();
<% end %>
