<h1><%= t('.title', complaint: @complaint) %></h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= t('.consequence') %></th>
      <th><%= t('.manpower') %></th>
      <th><%= t('.machines') %></th>
      <th><%= t('.materials') %></th>
      <th><%= t('.methods') %></th>
      <th><%= t('.management') %></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @five_m_analyses.each do |five_m_analysis| %>
      <tr>
        <td><%= five_m_analysis.consequence %></td>
        <td><%= five_m_analysis.manpower %></td>
        <td><%= five_m_analysis.machines %></td>
        <td><%= five_m_analysis.materials %></td>
        <td><%= five_m_analysis.methods %></td>
        <td><%= five_m_analysis.management %></td>
        <td>
          <span class="pull-right">
            <%= link_to t('.show'), complaint_five_m_analysis_path(@complaint, five_m_analysis) %>
            <%= link_to t('.edit'), edit_complaint_five_m_analysis_path(@complaint, five_m_analysis) %>
            <%= link_to t('.destroy'), complaint_five_m_analysis_path(@complaint, five_m_analysis), method: :delete, data: { confirm: t(:confirmation_question) } %>
          </span>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to t('.new_five_m_analysis'), new_complaint_five_m_analysis_path(@complaint) %>
